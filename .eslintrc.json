{
    "extends": "airbnb-base",
    "rules": {
        "no-plusplus": 1,
        "func-names": 0,
        "consistent-return": 1,
        "no-shadow": 0,
        "prefer-destructuring": 1,
        "prefer-arrow-callback": 1,
        "arrow-body-style": 1,
        "no-use-before-define": 0,
        "prefer-template": 1,
        "no-restricted-globals": 1
    },
    "env": {
        "node": true,
        "mocha": true
    }
}